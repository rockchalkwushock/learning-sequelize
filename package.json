    "husky": "~0.14.1",
    "jest": "~20.0.4",
    "jest-cli": "~20.0.4",
    "lint-staged": "~4.0.0",
    "nps": "~5.3.2",
    "nps-utils": "~1.2.0",
    "prettier": "~1.4.4"
  },
  "dependencies": {
    "babel-polyfill": "~6.23.0",
    "babel-register": "~6.24.1",
    "nodemon": "~1.11.0",
    "pg": "~6.4.0",
